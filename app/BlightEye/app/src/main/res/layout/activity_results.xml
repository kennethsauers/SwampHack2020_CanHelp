<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_normal"
    tools:context=".ResultsPage">

    <TextView
        android:id="@+id/resultsView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="172dp"
        android:text="RESULTS GO HERE"
        android:fontFamily="@font/kayak_sans_bold"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/understood_button"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/front_page_button"
        android:text="understood"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:fontFamily="@font/kayak_sans_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultsView" />
</androidx.constraintlayout.widget.ConstraintLayout>