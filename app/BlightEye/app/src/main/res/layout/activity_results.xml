<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_normal"
    tools:context=".ResultsPage">

    <TextView
        android:layout_width="308dp"
        android:layout_height="85dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="116dp"
        android:fontFamily="@font/kayak_sans_bold"
        android:text="Based on the trained model, this looks similar to"
        android:textAlignment="center"
        android:textSize="28dp"
        app:layout_constraintBottom_toTopOf="@+id/resultsView"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/resultsView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="308dp"
        android:fontFamily="@font/kayak_sans_bold"
        android:text="RESULTS GO HERE"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/understood_button"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="244dp"
        android:background="@drawable/front_page_button"
        android:fontFamily="@font/kayak_sans_regular"
        android:text="understood"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultsView" />

    <Button
        android:id="@+id/linkB"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="308dp"
        android:autoLink=""
        android:background="@drawable/front_page_button"
        android:text="Link to online article"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultsView" />

    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/kayak_sans_bold"
        android:text="I STILL NEED TO CHECK WITH A DOCTOR"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/understood_button"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>