<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Normal State -->
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient
                android:startColor="@color/colorPrimaryButtonDark"
                android:centerColor="@color/colorPrimaryButtonDark"
                android:endColor="@color/colorPrimaryButtonDark" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient
                android:startColor="@color/colorPrimaryButtonLight"
                android:centerColor="@color/colorPrimaryButton"
                android:endColor="@color/colorPrimaryButtonDark" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>